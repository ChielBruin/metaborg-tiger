module common
   
rules
  map[x]([]) =
    nop()
    
  map[x]([h|t]) =
    x(h);
    map[x](t)

  exitOK() = 
    rcf <- getC(curCF(), $ret);
    callC(rcf, int(0))
  
  resolveVar(name) = resolve(name, "Var")
  
  zip-with-index(list) =
    zip--with--index(list, 0)
  
  zip--with--index([], idx) = []
  zip--with--index([h | t], idx) =
    tail = zip--with--index(t, idx + 1);
    [(idx, h) | tail]
