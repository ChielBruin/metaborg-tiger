signature
  arrows
    Module -init-> V
    Module --> V
    
rules

  mod@Mod(_) -init-> vv
  where
    initNaBL2(mod) --> NaBL2;
    printSTerm(NaBL2) --> _;
    initHeap(mod) --> H;
    printS("\t\t--------- EVAL ---------\n\n") => _;
    T nabl2_topIndexOf(mod), NaBL2 |- mod :: H --> vv

  mod@Mod(e) --> vv
  where
    mod -paramsOf-> scope;
    DefaultSlots(declsOf(scope)) --> slots;
    initFrame(scope, {}, slots) --> F;
    F |- stdLib() --> _;
    F, E {} |- e --> vv
