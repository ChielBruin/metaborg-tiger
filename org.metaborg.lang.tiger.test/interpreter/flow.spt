module interpreter/flow

language Tiger

// If statents:

test simple if then [[
  if 1 = 1 then 5 else 3
]] run dnx-run-spt to "5"

test simple if else [[
  if 1 = 2 then 5 else 3
]] run dnx-run-spt to "3"

test nested if else [[
  if (if 1 = 2 then 3 < 4 else 5> 3) then (if 1 > 5 then 3 else 3) else 42
]] run dnx-run-spt to "3"


// While statements:

test simple if then [[
let
  var c : int := 0
in (
  while c < 3 do (
    c := c + 1
  );
  c
) end
]] run dnx-run-spt to "3"
